<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <SurfaceView
    android:id="@+id/preview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" />
  <com.googlecode.eyesfree.ocr.intent.RectsView
    android:id="@+id/overlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" />
  <ImageButton
    android:id="@+id/take_picture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/btn_shutter"
    android:src="@drawable/ic_menu_camera"
    android:text="@string/take_picture"
    android:layout_margin="5sp" />
  <ImageButton
    android:id="@+id/toggle_text_detection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@id/take_picture"
    android:background="@drawable/btn_shutter"
    android:src="@drawable/ic_menu_close_clear_cancel"
    android:text="@string/disable_text_detection"
    android:layout_margin="5sp" />
  <TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:text="@string/hint_capture"
    android:background="#77550000"
    android:padding="2sp"
    android:textSize="18sp" />
</RelativeLayout>